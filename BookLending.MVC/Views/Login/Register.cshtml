@using BookLending.MVC.DTOs
@model UserRegisterDto

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-light" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-light" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<div asp-validation-summary="All" class="text-danger"></div>

<div class="container">
    <h1>Cadastro de Usuários</h1>
    <form asp-action="Register" asp-controller="Login" method="post">
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" asp-for="Email">
        </div>

        <div class="mb-3">
            <label for="name" class="form-label">Nome</label>
            <input type="text" class="form-control" id="name" asp-for="Name">
        </div>

        <div class="mb-3">
            <label for="lastname" class="form-label">Sobrenome</label>
            <input type="text" class="form-control" id="lastname" asp-for="LastName">
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Senha</label>
            <input type="password" class="form-control" id="password" asp-for="Password">
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Confirma Senha</label>
            <input type="password" class="form-control" id="password" asp-for="ConfirmPassword">
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary w-25 mx-2">Cadastrar</button>
            <a asp-action="Index" asp-controller="Login" class="btn w-25">Voltar</a>
        </div>
    </form>
</div>
