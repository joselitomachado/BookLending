@using BookLending.MVC.DTOs
@model UserLoginDto

@{
    Layout = "_LayoutLoggedOut";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-light" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-light" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<div asp-validation-summary="All" class="text-danger"></div>

<div class="container">
    <form asp-action="Login" asp-controller="Login" method="post">
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" asp-for="Email">
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Senha</label>
            <input type="password" class="form-control" id="password" asp-for="Password">
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary w-25 mx-2">Entrar</button>
            <a asp-action="Register" asp-controller="Login" class="btn w-25">Cadastrar-se</a>
        </div>
    </form>
</div>
