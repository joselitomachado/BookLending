@model IEnumerable<LoansModel>

@{
    ViewData["Title"] = "Empréstimo de Livros";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Empréstimos</h1>
        <a class="btn btn-success mx-2" asp-controller="Loan" asp-action="Register"><i class="bi bi-file-earmark-plus mx-1"></i>Cadastrar novo empréstimo</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-light" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-light" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <table id="Loans" class="table table-light table-hover mt-4">
        <thead>
            <tr>
                <th scope="col">Recebedor</th>
                <th scope="col">Fornecedor</th>
                <th scope="col">Livro</th>
                <th scope="col">Última Atualização</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var loan in Model)
                {
                    <tr>
                        <th scope="row">@loan.Recipient</th>
                        <td>@loan.Provider</td>
                        <td>@loan.BorrowedBook</td>
                        <td>@loan.LastUpdatedDate</td>
                        <td>
                            <a asp-controller="Loan" asp-action="Edit" asp-route-id="@loan.Id" class="btn btn-warning mx-2"><i class="bi bi-pencil-square mx-1"></i>Editar</a>
                            <a asp-controller="Loan" asp-action="Delete" asp-route-id="@loan.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3-fill mx-1"></i>Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>