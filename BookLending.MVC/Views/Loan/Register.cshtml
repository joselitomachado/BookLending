@model LoansModel

@{
    ViewData["title"] = "Cadastrar Empréstimos";
}

<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light">Cadastro de Empréstimos</h1>
    </div>

    <form method="post" asp-controller="Loan" asp-action="Register">
        <div class="mb-3">
            <label for="Recipient" class="form-label text-light">Recebedor</label>
            <input type="text" class="form-control" asp-for="Recipient" id="Recipient" placeholder="Quem está recebendo o livro?">
            <span class="text-danger" asp-validation-for="Recipient"></span>
        </div>

        <div class="mb-3">
            <label for="Provider" class="form-label text-light">Fornecedor</label>
            <input type="text" class="form-control" asp-for="Provider" id="Provider" placeholder="Quem está emprestando o livro?">
            <span class="text-danger" asp-validation-for="Provider"></span>
        </div>

        <div class="mb-3">
            <label for="Book" class="form-label text-light">Livro</label>
            <input type="text" class="form-control" asp-for="BorrowedBook" id="Book" placeholder="Qual é o livro que está sendo emprestado?">
            <span class="text-danger" asp-validation-for="BorrowedBook"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Adicionar</button>
            <a class="btn btn-primary w-50" asp-controller="Loan" asp-action="Index">Voltar</a>
        </div>
        
    </form>
</div>